{% extends "base.html.twig" %}

{% block page_title %}Enter admin password{% endblock %}

{% block page_content %}
    <div class="card">
        <div class="card-header card-header-gray">
            <h2 class="card-title">
                Enter new admin password
            </h2>
        </div>
        <form>
            <div class="card-body">
                <div class="col-8 offset-2">
                    <label for="admin_pass">Enter new admin password</label>
                    <input type="password" name="admin_pass" id="admin_pass">

                    <label for="admin_pass_repeat">Enter new admin password</label>
                    <input type="password" name="admin_pass_repeat" id="admin_pass_repeat">
                </div>
            </div>
            <div class="card-footer">

            </div>
        </form>
    </div>
{% endblock %}